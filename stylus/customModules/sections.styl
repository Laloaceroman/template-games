
section
	position relative
	z-index 1
	//background-color white
	//background url(../img/pattern.png) center center repeat

	&:nth-child(even)
		background-color white
		//background-color lighter
	
	&.section-white
		background-color white
		
	&.section-light
		background-color light

	&.section-lighter
		background-color lighter
				
	&.section-dark
		background-color dark
		color white

	&.section-gray
		background-color gray
		color white
		
	&.section-black
		background-color black
		color white
		
	&.section-color
		background-color color
		color black

	&.section-color-2
		background-color color_2
		color black

	&.section-center
		text-align center

	.section-bg
		&.bg.bg-loaded
			opacity .5

	.section-bg-video
		cover absolute
		//z-index -1
		overflow hidden
		.youtube-iframe
			position absolute
			width 300%
			height 100%
			left -100%
			top 0
			opacity .2
			animation fadeIn .5s 1s ease backwards
			@media $break-sm
				width 150%
				left -25%
			@media $break-lg
				height 200%
				top -50%
			&:after
				content ""
				cover absolute


	.section-limit
		position relative
		max-width limit
		margin 0 auto
		padding sep*2 sep
		@media $break-md
			padding sep*3 sep
		@media $break-lg
			padding sep*4 sep
		&.section-limit-sm
			max-width limit_2

	.section-limit-sm
		position relative
		max-width limit_2
		margin 0 auto
		padding sep*2 sep
		@media $break-md
			padding sep*3 sep


	.section-group
		position relative

	.section-content
		max-width limit_3
		margin 0 auto 40px
		&:last-child
			margin-bottom 0
		h1
		h2
		h3
			margin-bottom 15px
			&:last-child
				margin-bottom 0
		&>*
			margin-bottom sep
			animation slideFadeUp .5s ease backwards
			animation-stagger 4, .05s, 1s
			&:last-child
				margin-bottom 0

	.section-content-va
		position relative
		min-height 400px
		line-height 400px
		.section-content
			display inline-block
			vertical-align middle
			line-height global_lh

	.section-content-va-md
		min-height 80px
		@media $break-md
			position relative
			min-height 400px
			line-height 400px
			.section-content
				display inline-block
				vertical-align middle
				line-height global_lh

	.section-subtitle
		@extends .subtitle

	.section-buttons
		.button
			margin-top 5px
			margin-bottom 5px


	&.section-map
		.section-map
			height 200px
			@media $break-md
				z-index 1
				cover absolute
		.section-limit
			overflow hidden
		.section-map-box
			max-width 380px
			z-index 2
			position relative
			animation fadeIn .5s .2s ease backwards
			text-align center
			margin 0 auto
			@media $break-md
				float left
				padding 30px
				background rgba(0,0,0,.25)
				border 2px solid color
			ul
				li
					overflow hidden
					margin-bottom 10px
					padding-top 2px
					a
						color white
					span
						float left
						circle 30px,2px
						border 2px solid white
						color white
						margin-right 10px
						margin-top -2px

		.section-map-logo
			max-width 300px
			margin 0 auto 10px

		.section-map-text
			margin-bottom 10px
			max-width 400px
			margin 0 auto 10px


		.section-map-social
			a
				display inline-block
				circle 40px, 2px
				border 2px solid color
				color white
				margin-right 2px
				&:hover
					background color
					color dark


	&.section-logos
		text-align center
		a
			display inline-block
			vertical-align middle
			margin 10px 20px
			text-align center
			transition .4s ease
			max-width 100px
			height 25px
			line-height 25px - 2
			animation slideFadeLeft .5s ease backwards
			animation-stagger 8, .05s
			@media $break-md
				max-width 140px
				height 40px
				line-height 40px - 2
			img
				max-height 25px
				max-width 100%
				display inline-block
				vertical-align middle
				@media $break-md
					max-height 40px
		&.section-black
			a
				opacity .5
				&:hover
					opacity 1

	&.section-items
		.section-limit
		.section-limit-sm
			@media $break-sm
				padding-left 60px
				padding-right 60px



