


.map
	position relative
	overflow hidden

	.map-gmap
		position absolute
		width 100%
		height 120%
		left 0
		top -10%

	.map-zoom
		position absolute
		right 10px
		bottom 10px
		.map-zoom-button
			margin-left 1px
			opacity .2
			&:hover
				opacity 1

	.map-marker
		display none

	.map-infowindow
		max-width 300px

